{
    "id": "smokeping",
    "name": "smokeping",
    "description": "[{{ project_name|capitalize }}]({{ project_url }}) keeps track of your network latency. For a full example of what this application is capable of visit [UCDavis](http://smokeping.ucdavis.edu/cgi-bin/smokeping.fcgi).",
    "icon": "https://camo.githubusercontent.com/e0694ef783e3fd1d74e6776b28822ced01c7cc17/687474703a2f2f6f73732e6f6574696b65722e63682f736d6f6b6570696e672f696e632f736d6f6b6570696e672d6c6f676f2e706e67",
    "links": [
        {
            "type": "docker",
            "url": "https://hub.docker.com/r/linuxserver/smokeping"
        },
        {
            "type": "docs",
            "url": "https://docs.linuxserver.io/images/docker-smokeping"
        }
    ],
    "containers": [
        {
            "name": "smokeping",
            "image": "linuxserver/smokeping",
            "env": [
                {
                    "id": "PUID",
                    "key": "PUID",
                    "description": "User ID",
                    "default": "100"
                },
                {
                    "id": "PGID",
                    "key": "PGID",
                    "description": "Group ID",
                    "default": "100"
                },
                {
                    "id": "TZ",
                    "key": "TZ",
                    "description": "Timezone",
                    "default": "America/New_York"
                }
            ],
            "volumes": [
                {
                    "container": "/config",
                    "description": "Configure the `Targets` file here",
                    "key": "config"
                },
                {
                    "container": "/data",
                    "description": "Storage location for db and application data (graphs etc)"
                }
            ],
            "ports": [
                {
                    "container": "80",
                    "description": "Allows HTTP access to the internal webserver."
                }
            ]
        }
    ]
}