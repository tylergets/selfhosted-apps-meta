{
    "id": "grav",
    "name": "grav",
    "description": "[{{ project_name|capitalize }}]({{ project_url }}) is a Fast, Simple, and Flexible, file-based Web-platform.\n",
    "icon": "https://raw.githubusercontent.com/linuxserver/docker-templates/master/linuxserver.io/img/grav-logo.png",
    "links": [
        {
            "type": "docker",
            "url": "https://hub.docker.com/r/linuxserver/grav"
        },
        {
            "type": "docs",
            "url": "https://docs.linuxserver.io/images/docker-grav"
        }
    ],
    "containers": [
        {
            "name": "grav",
            "image": "linuxserver/grav",
            "env": [
                {
                    "id": "PUID",
                    "key": "PUID",
                    "description": "User ID",
                    "default": "100"
                },
                {
                    "id": "PGID",
                    "key": "PGID",
                    "description": "Group ID",
                    "default": "100"
                },
                {
                    "id": "TZ",
                    "key": "TZ",
                    "description": "Timezone",
                    "default": "America/New_York"
                }
            ],
            "volumes": [
                {
                    "container": "/config",
                    "description": "Contains all relevant configuration files.",
                    "key": "config"
                }
            ],
            "ports": [
                {
                    "container": "80",
                    "description": "Port for web frontend"
                }
            ]
        }
    ]
}