{
    "id": "resilio-sync",
    "name": "resilio-sync",
    "description": "[{{ project_name|capitalize }}]({{ project_url }}) (formerly BitTorrent Sync) uses the BitTorrent protocol to sync files and folders between all of your devices. There are both free and paid versions, this container supports both. There is an official sync image but we created this one as it supports user mapping to simplify permissions for volumes.",
    "icon": "https://www.resilio.com/img/individual/freeproduct.jpg",
    "links": [
        {
            "type": "docker",
            "url": "https://hub.docker.com/r/linuxserver/resilio-sync"
        },
        {
            "type": "docs",
            "url": "https://docs.linuxserver.io/images/docker-resilio-sync"
        }
    ],
    "containers": [
        {
            "name": "resilio-sync",
            "image": "linuxserver/resilio-sync",
            "env": [
                {
                    "id": "PUID",
                    "key": "PUID",
                    "description": "User ID",
                    "default": "100"
                },
                {
                    "id": "PGID",
                    "key": "PGID",
                    "description": "Group ID",
                    "default": "100"
                },
                {
                    "id": "TZ",
                    "key": "TZ",
                    "description": "Timezone",
                    "default": "America/New_York"
                }
            ],
            "volumes": [
                {
                    "container": "/config",
                    "description": "Where resilio-sync should store its config file.",
                    "key": "config"
                },
                {
                    "container": "/downloads",
                    "description": "Folder for downloads/cache."
                },
                {
                    "container": "/sync",
                    "description": "Sync folders root."
                }
            ],
            "ports": [
                {
                    "container": "8888",
                    "description": "WebUI"
                },
                {
                    "container": "55555",
                    "description": "Sync Port."
                }
            ]
        }
    ]
}